<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="LocationTrackingApp.MainPage"
             Title="MainView">
    <Grid RowDefinitions="*,Auto">
        <!-- Map fills the top area -->
        <maps:Map x:Name="map" IsShowingUser="True" MapType="Street" Grid.Row="0" />

        <!-- Status label -->
        <Label x:Name="statusLabel" Text="Tracking: Off | Points: 0"
               Grid.Row="1" HorizontalTextAlignment="Center"
               Padding="10" FontSize="14" BackgroundColor="#80000000" TextColor="White" />
    </Grid>
</ContentPage>
